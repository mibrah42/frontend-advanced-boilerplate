<% flat = data.flats[owner] %>

<div class="banner" style ="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.3) 50%), url('<%= flat.picture %>'); height: 50vh; background-position: center;"></div>





<div class="container" style="margin: 50px">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-1">
      <div class="information">
      <div class="photo-title text-center">
        <%= image_tag flat.profile_pic, class: "img-circle", width: "80" %>
        <p style ="font-size: 16px; color: #777777;"><%= flat.owner.split(" ").first %></p>
        </div>
        <div class="desc">
          <h1 style = "font-size: 20px"><%= flat.body %></h1>
          <p style =" font-size: 16px; color: #777777;"><%= flat.city %></p>
          <% yellow_star = '<i class="fa fa-star" style="color: #ffb400;"></i>' %>
          <% grey_star = '<i class="fa fa-star" style="color: #cacccd"></i>' %>
          <% i = 0 %>
          <% flat.rating.truncate.times do  %>
          <%= yellow_star %>
          <%  i += 1 %>
          <% end %>
          <% (5-i).times do  %>
          <%= grey_star %>
          <% end %>
        </div>
      </div>
      </div>
      <div class="col-xs-12 col-sm-4">
      <div class="form-group">
        <form action="#" >
          <h4>Book this flat</h4>
          <div class="form-group">
            <div class="row">
              <div class="col-xs-6">
                <input type="text" class="form-control" placeholder="checkin" id="checkin">
              </div>
              <div class="col-xs-6">
                <input type="text" class="form-control" placeholder="checkout">
              </div>
            </div>
          </div>
          <div class="form-group">
            <select name="" id="guests" class="form-control">
              <option value="1">1 guest</option>
              <option value="2">2 guests</option>
              <option value="3">3 guests</option>
            </select>
          </div>
          <input type="submit" class="btn btn-danger" value="Book it" style="width: 100%">
        </form>
        </div>
        </div>
        </div>
    </div>

    <div class="flat-content">
     <div class="container">
      <div class="row">
        <div class="col-xs-12 col-sm-10 col-sm-offset-1">
          <h2 style ="font-size: 20px;">About this flat</h2>
          <p style = "font-size: 16px;">This one bedroom studio lodges 2 people (there's 1 double bed) it is located in the city center, in a calm traditional residential area near city´s main Avenue - 3 minutes walk from Sacré Coeur.</p>
         </div>
        </div>

        <hr>
        <div class="row" id="flat-data">
        <div class="col-xs-12 col-sm-2 col-sm-offset-1">
          The space
         </div>
         <div class="col-xs-12 col-sm-4">
            <ul class="list-unstyled">
              <li>Accommodates: <strong>2</strong></li>
              <li>Bathrooms: <strong>1</strong></li>
              <li>Bed type: <strong>Real Bed</strong></li>
              <li>Bedrooms: <strong>1</strong></li>
            </ul>
         </div>
         <div class="col-xs-12 col-sm-4">
           <ul class="list-unstyled">
             <li>Beds: <strong>1</strong></li>
              <li>Property type: <strong>Apartment</strong></li>
              <li>Room type: <strong>Entire home/apt</strong></li>
           </ul>
         </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-xs-12 col-sm-2 col-sm-offset-1">
              Amenities
            </div>
            <div class="col-xs-12 col-sm-4">
              <ul class="list-unstyled">
                <li>Kitchen</li>
                <li>Wifi</li>
              </ul>
            </div>
            <div class="col-xs-12 col-sm-4">
              <ul class="list-unstyled">
                <li>TV</li>
                <li>Welcome drink</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
<style>

  .flat-content {
    background-color: #F5F5F5;
    padding: 50px;
    font-size: 12px;
    color: #797373;
  }

  .form-group {
    background-color: #F4F4F4;
    padding: 10px;
  }
  .information {
    display: flex;
    align-items: center;
    padding: 30px;
    font-size: 16px;
  }
  .photo-title{
    margin-right: 20px;
  }

  .desc h1{
    margin-top: 0;
  }
  .desc p {
    margin: 5;
  }

</style>


